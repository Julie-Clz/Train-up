<h1>Tes discussions</h1>

<ul class="nav">
  <% @chatrooms.each do |chatroom| %>
    <% if chatroom.participants.where(user: current_user).present? %>
      <li class="nav-item">
        <%= link_to "Chat", chatroom_path(chatroom), class: "nav-link" %>

        <div class="chatroom d-flex flex-column align-items-center justify-content-center">
  <div class="title-chat">
    <h1><i class="fas fa-comments"></i> TrainUp chat <i class="fas fa-comments"></i></h1>
  </div>
  <div id="messages" data-chatroom-id="<%= chatroom.id %>">
    <% chatroom.messages.each do |message| %>
    <%= render 'messages/message', message: message %>
    <% end %>
  </div>
      </li>
     <% end %>
  <% end %>
</ul>
