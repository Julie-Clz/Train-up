<!DOCTYPE html>
<html>
  <head>
    <title><%= meta_title %></title>
     <%= favicon_link_tag "favicon.ico" %>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&family=Roboto&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

  </head>

  <body id="<%= controller.controller_name %>-<%= controller.action_name %>">
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <div class="<%= "container custom-container" unless (controller.controller_name == "pages" && controller.action_name == "home") || (controller.controller_name == "pages" && controller.action_name == "profile") || (controller.controller_name == "skills" && controller.action_name == "index") || (controller.controller_name == "skills" && controller.action_name == "show") || (controller.controller_name == "chatrooms" && controller.action_name == "show") %>">
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
