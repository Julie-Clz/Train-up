<% content_for :meta_title, "TrainUp: réserve ton coach" %>
<% content_for :meta_description, "En un clic, réserve ton cours particulier avec le coach de ton choix" %>
<% content_for :meta_image, cl_image_path("banner.png") %>

 <div class="d-flex flex-row">
 	<div class="left-run">
 		<%= image_tag "left-runners.svg", class: "run" %>
	 </div>

	<div class="container">
		<div class="show-card-price d-flex justify-content-between align-items-center">

			<div class="show-card d-flex flex-row align-items-center">

				<div class="details-show d-flex flex-column">
					<div class="name"><%= @skill.user.first_name %> <%= @skill.user.last_name %></div>
					<div class="sport"><% @skill.experiences.each do |experience| %>
						<span><%= experience.sport.name %></span> - <%= @skill.name %>
					  <% end %>
					</div>
				</div>
			 </div>

			<% @skill.experiences.each do |experience| %>
				<div class="price-euros"><span class="price"><%= experience.price %></span> € / heure
			<% end %></div>

		</div>

		<div class="show d-flex flex-row justify-content-between">

			<div class="competences d-flex flex-column justify-content-around">
				<% @skill.experiences.each do |experience|%>
					<% if experience.specialty %>
						 <div class="comp d-flex flex-row"><div class="comp-titre">Spécialité</div> <div class="comp-text"><%= experience.specialty %></div></div>
					<% end %>
					<div class="comp d-flex"><div class="comp-titre">Expérience</div> <div class="compt-text"><%= experience.years %> années </div></div>
				<% end %>
				<div class="comp d-flex"><div class="comp-titre">Profil</div> <div class="comp-text"><%= @skill.description %></div></div>
				<div class="comp d-flex"><div class="comp-titre location">Localisation</div><div class="comp-text"><%= @skill.location %></div></div>

				<div class="btn-delete"><%= link_to "Supprime ta compétence", skill_path, method: :delete, data: {confirm: "Es-tu sûr ?"}, class: "btn-green" %></div>
			</div>

			<div class="calandar">

				<div class="booking-form">
				    <% if current_user != @skill.user %>
				    	<%= simple_form_for([@skill, @booking]) do |f| %>
					      <%= f.input :start_date, as: :string, required: false, label: "date de la séance", input_html: {class: "datepicker start"} %>
					      <%= f.input :end_date, as: :string, required: false, label: "date de la séance", input_html: {class: "datepicker end"} %>
					    <p>Prix total : <span id="total-price"></span>€ </p>
					      <%= f.button :submit, "Réserver", class: "btn-green" %>
					   <% end %>`
				   <% end %>
			   </div>


			</div>
		</div>

		<div class="show d-flex flex-column justify-content-between">
			<div class="video">
				<h1>Video d'une séance</h1>
				</br>
				<div class="video-container d-flex justify-content-center align-items-center">
				  <%= cl_video_tag @skill.video.key, :width => 300, source_types: :mp4, controls: true %>
				</div>

			</div>
		</div>

			<div class="comment">
				<% if @skill.reviews.present? %>
					<h1>Commentaires</h1>
					<% @skill.reviews.each do |review| %>
      					<div class="name-rating d-flex flex-row justify-content-between">
	      					<div class="review-name"><%= review.user.first_name.capitalize %> <%= review.user.last_name.capitalize %></div>
							<div class="rating"><%= review.rating.times do %>
	              				<i class="fas fa-star"></i>
	              			<% end %></div>
	              		</div>
				     		<div class="content"><%= review.content %></div>


					<% end %>
				<% end %>
			</div>

		</div>

	<div class="right-run">
 		<%= image_tag "right-runners.svg", class: "run" %>
	</div>
</div>








