<!-- </div> -->
	
		<div class="profil-price-container">
			<div class="container-show">
				<div class="profile-price d-flex flex-row justify-content-between">
					<div class="show-card d-flex flex-row justify-content-between">
						<div><%= cl_image_tag @skill.user.photo.key, class:"show-avatar"%></div>
						<div class="details-show d-flex flex-column">
							<div class="name"><%= @skill.user.first_name %> <%= @skill.user.last_name %></div>
							<div class="sport"><% @skill.experiences.each do |experience| %>
								<%= @skill.name %> - <span><%= experience.sport.name %></span>
							  <% end %>
							</div>
						</div>
					 </div>
							
					<!-- div class="price-logo d-flex flex-column"> -->
						<!-- <div class="align-self-end"><%= image_tag "logo-escrime.svg"%></div> -->
						<div class="price-euros align-self-start"><% @skill.experiences.each do |experience| %>
							<span class="price"><%= experience.price %></span> € / heure
						<% end %>
						<!-- </div> -->
					</div>
				</div>		
			</div>
		</div>

<div class="container-show">
	<div class="show d-flex flex-column">

		<div class="profile-video-calandar d-flex flex-row justify-content-between">
			<div class="competences-video d-flex flex-column">
				
				<div class="competences d-flex flex-column justify-content-around">
					<h1>Son profil</h1>
					<% @skill.experiences.each do |experience|%>
						<% if experience.specialty %>
							 <div class="comp d-flex flex-row"><div class="comp-titre">Spécialité</div><div class="comp-text"><%= experience.specialty %></div></div>
						<% end %>
						<div class="comp d-flex flex-row"><div class="comp-titre">Expérience</div><div class="comp-text"><%= experience.years %> années </div>
						</div>
						<% end %>
						<div class="comp d-flex flex-row"><div class="comp-titre">Profil</div> <div class="comp-text"><%= @skill.description %></div></div>
						<div class="comp d-flex flex-row"><div class="comp-titre location">Localisation</div><div class="comp-text"><%= @skill.location %></div></div>
						<% if current_user === @skill.user %>
						<div class="btn-delete"><%= link_to "Supprime ta compétence", skill_path, method: :delete, data: {confirm: "Es-tu sûr ?"}, class: "btn-green" %></div>
						<% end %>
				</div>
				<div class="ligne align-self-center"></div>	
				<div class="video-show">
					<h1>Video d'une séance</h1>
					</br>
					<div class="video-container d-flex justify-content-center align-items-center">
						<video class="video-tape" controls width="250">
					    	<source src= "<%= asset_path('video.mp4'	) %>"
					            type="video/mp4">
						</video>
					</div>
				</div>
			</div>

			<% if current_user != @skill.user %>
				<div class="calandar">
					<h1>Réservation</h1>
					<div class="booking-form">
					    	<%= simple_form_for([@skill, @booking]) do |f| %>
						      <div class="input-date"><%= f.input :start_date, as: :string, required: false, label: "Sélectionner une date", placeholder: "Sélectionner une date", input_html: {class: "datepicker date"} %></div>
						      <div class="hour d-flex">
							      <%= f.input :start_hour, as: :string, required: false, label: "heure de début", placeholder: "17:00", input_html: {class: "hourpicker start"} %>
							      <%= f.input :end_hour, as: :string, required: false, label: "heure de fin", placeholder: "19:00", input_html: {class: "hourpicker end"} %>
						      </div>
						    <p>Prix total : <span id="total-price"></span>€ </p>
						   <%= f.button :submit, "Réserver", class: "btn-green"%>
						   <% end %>`
				   </div>
				</div>
	   		<% end %>
		</div>

		<% if @skill.reviews.present? %>
			<div class="comment">
					<h1>Commentaires</h1>
					<% @skill.reviews.each do |review| %>
	  					<div class="name-rating d-flex flex-row justify-content-between">
	      					<div class="review-name"><%= review.user.first_name.capitalize %> <%= review.user.last_name.capitalize %></div>
							<div class="rating"><%= review.rating.times do %>
	              				<i class="fas fa-star"></i>
	              			<% end %></div>
	              		</div>
				     		<div class="content"><%= review.content %></div>
			           

					<% end %>
			</div>
		<% end %>


	</div>			
</div>

